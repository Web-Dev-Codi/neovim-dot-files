{
  "languageserver": {
    "rome-lsp": {
      "command": "rome",
      "args": ["lsp"],
      "filetypes": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "json"
      ],
      "rootPatterns": [".config"],
      "requireRootPattern": true
    },
    "rust": {
      "command": "rust-analyzer",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml"]
    },
    "efm": {
      "command": "efm-langserver",
      "args": [],
      // custom config path
      "args": ["-c", "/home/webdevcodi/.config/efm-langserver/config.yaml"],
      "filetypes": [
        "vim",
        "eruby",
        "markdown",
        "javascript",
        "javascriptreact",
        "css",
        "html",
        "typescript",
        "typescriptreact",
        "json",
        "rust"
      ]
    }
  },
  "typescript.check.npmIsInstalled": true,
  "eslint.packageManager": "npm",
  "tsserver.enable": true
}
